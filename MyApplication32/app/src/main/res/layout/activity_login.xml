<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pk"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"></LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Login Form"
        android:textColor="#F5F8F4F4"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="342dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:background="#FD0E0D0D"
        android:contentDescription="PASSWORD"
        android:ems="10"
        android:hint="Enter the Password"
        android:inputType="textPassword"
        android:textColor="#F5F3EDED"
        android:textColorHint="#F3FFFFFF"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="351dp"
        android:layout_height="46dp"
        android:layout_marginTop="54dp"
        android:background="#FC0C0202"
        android:ems="10"
        android:hint="Enter the Email-Id"
        android:inputType="textEmailAddress"
        android:textColor="#F2E7D8D8"
        android:textColorHint="#F2F3EAEA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e2" />

    <Button
        android:id="@+id/b1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:background="#F23A3838"
        android:text="SIGN IN"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F8F8F2F2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e3" />

</androidx.constraintlayout.widget.ConstraintLayout>