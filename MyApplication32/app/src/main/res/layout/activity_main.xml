<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pk"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SIGN UP"
        android:textColor="#F5F8F4F4"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="343dp"
        android:layout_height="45dp"
        android:layout_marginTop="54dp"
        android:background="#FD111010"
        android:ems="10"
        android:hint="@string/common_google_play_services_enable_button"
        android:inputType="textPersonName"
        android:textColor="#F7F5EDED"
        android:textColorHint="#F8EBDEDE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="@tools:sample/first_names" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="342dp"
        android:layout_height="45dp"
        android:layout_marginTop="54dp"
        android:background="#FD0E0D0D"
        android:contentDescription="PASSWORD"
        android:ems="10"
        android:hint="Enter the Password"
        android:inputType="textPassword"
        android:textColor="#F5F3EDED"
        android:textColorHint="#F3FFFFFF"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e1" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="351dp"
        android:layout_height="46dp"
        android:layout_marginTop="54dp"
        android:background="#FC0C0202"
        android:ems="10"
        android:hint="Enter the Email-Id"
        android:inputType="textEmailAddress"
        android:textColor="#F2E7D8D8"
        android:textColorHint="#F2F3EAEA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e2" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginTop="58dp"
        android:background="#F3070707"
        android:ems="10"
        android:hint="Enter the Phone number"
        android:inputType="phone"
        android:textColorHint="#F3F8EDED"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e3" />

    <Button
        android:id="@+id/b1"
        android:layout_width="156dp"
        android:layout_height="54dp"
        android:layout_marginBottom="32dp"
        android:text="REGISTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e4" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registered ? Sign in here."
        android:textColor="#F7F7EDED"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />
</androidx.constraintlayout.widget.ConstraintLayout>